<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.username}} on {{format_date date_created}}</p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>{{comment.content}}</h2>
    <p>---{{comment.user.username}}, {{format_date comment.date_created}}</p>
  </div>
</div>
{{/each}}

<div>
    <form class="form">
      <div class="form-group">
        <label for="comment-area">Comment</label>
        <textarea id="comment-area" name="comment-area" rows="4" cols="50"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
</div>
